<% @loaded = 'false' %>
<%  spellBalls = @allSpells.reject {|k,v|
  if v.has_key?('t') && (v['t'].include? "Magic Ball")
       false
  else
       true
  end
       
  }%>
<div data-role="page" class="jqm-demos jqm-home" id="spells-ball">
  <%= erb :'sections/updated' %>
  <%= erb :'sections/header' %>
  <%= erb :'sections/nav-panel' %>
  <%= erb :'sections/search-panel', locals: {loaded: @loaded} %>
  <% @loaded = 'true' %>
  <div role="main" class="ui-content">
    <ul data-role="listview" data-filter="true" data-autodividers="true" data-filter-placeholder="Search Magic Balls" data-inset="true" data-icon="false">
      <% spellBalls.each {|key, value| %>
      <li><a href=<%="/spells/#{key[0]}##{key}"%> data-ajax="false"><%="#{value['name']}"%></a></li>
      <% } %>
    </ul>
  </div>
  <!-- /content -->
</div>
<!-- /page -->
